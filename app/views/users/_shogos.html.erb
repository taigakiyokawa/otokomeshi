            <h3><%= shogo_f.name %></h3>
        <% end %>
        <%  %>
    </div>
    <div class="last">
        <p>-下の句-</p>
        <% @user_shogo_lasts.each do |shogo_l| %>
            <h3> <%= shogo_l.name %></h3>
