
<div class="container">
  <h1><%= @post.title %></h1>
  <%= image_tag @post.meshim.url %>

  <h2>作り方</h2>
  <p><%= @post.body %></p>
  <p><%= @post.created_at.strftime('%Y/%m/%d %H:%M') %></p>

  <div class="btns">
  <%= link_to '編集', edit_post_path(@post) %>
  <%= link_to '削除', @post, method: :delete, data: { confirm: '消してよいか?' } %>
  <%= link_to '戻る', posts_path %>
  </div>
</div>
