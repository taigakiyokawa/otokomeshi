<p id="notice"><%= notice %></p>

<h1>新着</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><h2><%= post.title %></h2></td>
      </tr>
      <tr>
        <td><%= post.created_at.strftime('%Y/%m/%d %H:%M') %></td>
        <td><%= link_to '編集', edit_post_path(post) %></td>
        <td><%= link_to '削除', post, method: :delete, data: { confirm: '消してよいか?' } %></td>
      </tr>
      <tr>   
        <td><%= link_to image_tag(post.meshim.url, :size =>'240x160'), post %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<%= link_to '新兵追加', new_post_path %>