<div class="res__container ore_info">
  <div class="user">
    <%= render "users/user" %>
  </div>
</div>

<div class="res__container base meshi_new">
  <h1 class="new_soldier">新兵追加</h1>
  <%= render 'form', post: @post %>
</div>

<div class="index_container">
  <div class="tab_wrap">
    <input id="tab1" type="radio" name="tab_btn" checked>
    <input id="tab2" type="radio" name="tab_btn">
    <input id="tab3" type="radio" name="tab_btn">

    <div class="tab_area">
      <label class="tab1_label" for="tab1">新着</label><label class="tab2_label" for="tab2">番付</label><label class="tab3_label" for="tab3">天晴</label>
    </div>

    <div class="panel_area">
      <%= render 'search_form' %>
      <div id="panel1" class="tab_panel">
        <%= render "posts/newIndex"%>
      </div>
      <div id="panel2" class="tab_panel">
        <%= render "posts/rankIndex"%>
      </div>
      <div id="panel3" class="tab_panel">
        <%= render "posts/appareIndex"%>
      </div>
    </div>
  </div>
</div>