<div class="top">
  <div class="top__container">
    <img class="top__logo" src="/assets/logo.svg" alt="魁!!漢飯">
    <%= link_to '初 陣', new_user_registration_path, :class => "sign" %><%= link_to '出 陣', new_user_session_path, :class => "sign now" %>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= devise_error_messages! %>

      <div class="form_wrap">
        <div class="field">
          <%= f.label :username %><br />
          <%= f.text_field :username, autofocus: true, autocomplete: "username", :size=>"32" %>
        </div>

        <div class="field">
          <%= f.label :password %><br />
          <%= f.password_field :password, autocomplete: "current-password", :size=>"32" %>
        </div>

        <div class="back-or-action">
          <div class="actions">
            <%= f.submit "いざ出陣ッ!" %>
          </div>
        </div>
        <div class="clear"></div>
      </div>
    <% end %>

    <%= link_to '概 要', '/top', :class => 'about' %>
  </div>
</div>